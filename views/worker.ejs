				<div class="col-md-12">
					<a href="/add-worker" class="border-shadow">
                        <span class="text-gradient">New Worker</span>
                    </a>
					<div class="table-wrap">
						<table class="table">
					    <thead class="thead-primary">
					      <tr>
					        <th>Worker ID</th>
					        <th>Name</th>
					        <th>Mobile</th>
					        <th>House Number</th>
                  <th>Street</th>
					        <th>City</th>
					        <th>Update</th>
					        <th>Delete</th>
					      </tr>
					    </thead>
					    <tbody>
                            <% for(var i=0;i < workers.length ;i++){%>
                                <tr>
                                    <td><%=workers[i].id%></td>
                                    <td><%=workers[i].name%></td>
                                    <td><%=workers[i].mobile%></td>
                                    <td><%=workers[i].house_number%></td>
                                    <td><%=workers[i].street%></td>
                                    <td><%=workers[i].city%></td>
                                    <td><a href="/update_worker?id=<%=workers[i].id%>" class="btn btn-primary">Update</a></td>
                                    <td><a class="btn btn-primary delete" data-id=<%=workers[i].id%>>Delete</a></td>
                                </tr>
                                <%}%>
					    </tbody>
					  </table>
					</div>
