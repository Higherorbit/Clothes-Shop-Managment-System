<%-include('include/_header')%>

<main id="int-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">     
                <a href="/purchase_history">All Purchases</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Purchase</h2>
            <span class="text-dark">Use the below form to add new purchase</span>
        </div>
        <form action="/api/purchase_historys" method="POST" id="add_purchase_history" name="add_purchase_history">
            <div class="new_product">
                <div class="form-group">
                    <label for="id" class="text-dark">ID</label>
                    <input type="text" name="id" id="id" placeholder="ID">
                </div>
                <div class="form-group">
                    <label for="date" class="text-dark">Date</label>
                    <input type="text" name="date" id="date" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Seller Name</label>                   
                    <input type="text" name="name" id="name"  placeholder="Seller Name">
                </div>
                <div class="form-group">
                    <label for="mobile" class="text-dark">Seller Mobile</label>
                    <input type="text" name="mobile" id="mobile" placeholder="Seller Mobile">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </form>
    </div>
</main>

<%-include('include/_footer')%>