        function generateBill() {
            const queryString = window.location.search;
            const urlParams = new URLSearchParams(queryString);
            const id = urlParams.get('id')
            fetch("http://localhost:3000/api/rents?id="+id+"&sum=1")
            .then(response => {
            if(response.ok) {
                alert("The Product In The Cart Are Rented!")
                window.location.href = "http://localhost:3000/rental"
}
})
    }
