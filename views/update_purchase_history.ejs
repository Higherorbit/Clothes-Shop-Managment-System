<%-include('include/_header')%>

<main id="int-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
        
                <a href="/purchase_history">All Purchases</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Purchase</h2>
            <span class="text-dark">Use the below form to add new purchase</span>
        </div>
        <form method="POST" id="update_purchase_history">
            <div class="new_product">
                <div class="form-group">
                    <label for="id" class="text-dark">ID</label>
                    <input type="text" name="id" id="id" value="<%=purchase_history.id%>" placeholder="ID">
                </div>
                <div class="form-group">
                    <label for="date" class="text-dark">Date</label>
                    <input type="text" name="quantity" id="date" value="<%=purchase_history.date%>" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Seller Name</label>
                    <input type="text" name="name" id="name" value="<%=purchase_history.name%>" placeholder="Seller Name">
                </div>
                <div class="form-group">
                    <label for="mobile" class="text-dark">Seller Mobile</label>
                    <input type="text" name="mobile" id="mobile" value="<%=purchase_history.mobile%>" placeholder="Seller Mobile">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </form>
    </div>
</main>

<%-include('include/_footer')%>