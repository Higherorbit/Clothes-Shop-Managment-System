<%-include('include/_header')%>

<main id="int-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
        
                <a href="/rental">All Rentals</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Rental</h2>
            <span class="text-dark">Use the below form to add new rental</span>
        </div>
        <form method="POST" id="update_rental">
            <div class="new_product">
                <div class="form-group">
                    <label for="id" class="text-dark">ID</label>
                    <input type="text" name="id" id="id" value="<%=rental.id%>" placeholder="ID">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Start Date</label>
                    <input type="text" name="s_date" id="s_date" value="<%=rental.date%>" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Return Date</label>
                    <input type="text" name="r_date" id="r_date" value="<%=rental.date%>" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="cid" class="text-dark">Customer ID</label>
                    <input type="text" name="cid" id="cid" value="<%=rental.cid%>" placeholder="Customer ID">
                </div>
                <div class="form-group">
                    <label for="wid" class="text-dark">Worker ID</label>
                    <input type="text" name="wid" id="wid" value="<%=rental.wid%>" placeholder="Worker ID">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </form>
    </div>
</main>

<%-include('include/_footer')%>