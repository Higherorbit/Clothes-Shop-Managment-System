<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STYLEMART</title>
    <link  href="css/style.css"  rel="stylesheet" type="text/css" />
</head>
<body>
    <!--Header-->
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a href="/transaction" class="nav-brand text-dark">Clothes Management System</a>
                </div>
            </div>
        </nav>
    </header>

<main id="int-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">     
                <a href="/transaction">All Transaction</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Transaction</h2>
            <span class="text-dark">Use the below form to add new transaction</span>
        </div>
        <form action="/api/transactions" method="POST" id="add_transaction" name="add_transaction">
            <div class="new_product">
                <div class="form-group">
                    <label for="id" class="text-dark">ID</label>
                    <input type="text" name="id" id="id" placeholder="ID">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">DATE</label>                   
                    <input type="text" name="date" id="date"  placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="mobile" class="text-dark">Customer ID</label>
                    <input type="text" name="cid" id="cid" placeholder="Customer ID">
                </div>
                <div class="form-group">
                    <label for="house_number" class="text-dark">Worker ID</label>
                    <input type="text" name="wid" id="wid" placeholder="Worker ID">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </form>
    </div>
</main>

<%-include('include/_footer')%>