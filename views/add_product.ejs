<%-include('include/_header')%>

<main id="int-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">     
                <a href="/product">All Products</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Product</h2>
            <span class="text-dark">Use the below form to add new product</span>
        </div>
        <form action="/api/products" method="POST" id="add_product" name="add_product">
            <div class="new_product">
                <div class="form-group">
                    <label for="id" class="text-dark">ID</label>
                    <input type="text" name="id" id="id" placeholder="ID">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Name</label>                   
                    <input type="text" name="name" id="name"  placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="quantity" class="text-dark">Quantity</label>
                    <input type="text" name="quantity" id="quantity" placeholder="Quantity">
                </div>
                <div class="form-group">
                    <label for="selling_price" class="text-dark">Selling Price</label>
                    <input type="text" name="selling_price" id="selling_price" placeholder="Selling Price">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </form>
    </div>
</main>

<%-include('include/_footer')%>