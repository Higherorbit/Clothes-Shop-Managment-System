<%-include('include/_header')%>

<main id="int-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
        
                <a href="/product">All Products</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Product</h2>
            <span class="text-dark">Use the below form to add new product</span>
        </div>
        <form method="POST" id="update_product">
            <div class="new_product">
                <div class="form-group">
                    <label for="id" class="text-dark">ID</label>
                    <input type="text" name="id" id="id" value="<%=product.id%>" placeholder="ID">
                </div>
                <div class="form-group">
                    <label for="name" class="text-dark">Name</label>
                    <input type="text" name="name" id="name" value="<%=product.name%>" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="quantity" class="text-dark">Quantity</label>
                    <input type="text" name="quantity" id="quantity" value="<%=product.quantity%>" placeholder="Quantity">
                </div>
                <div class="form-group">
                    <label for="selling_price" class="text-dark">Selling Price</label>
                    <input type="text" name="selling_price" id="selling_price" value="<%=product.selling_price%>" placeholder="Quantity">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </form>
    </div>
</main>

<%-include('include/_footer')%>